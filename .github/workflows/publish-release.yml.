name: Publish Release on Label

on:
  pull_request:
    types: [closed, labeled]  # trigger when PR is merged or labeled
    branches:
      - develop
      - main

permissions:
  contents: write
  pull-requests: write

jobs:
  publish:
    if: ${{ github.event.pull_request.merged == true && contains(github.event.pull_request.labels.*.name, 'Publish') }}
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Publish Release
        uses: release-drafter/release-drafter@v6
        with:
          config-name: ${{ github.event.pull_request.base.ref == 'develop' && 'release-drafter-develop.yml' || 'release-drafter-main.yml' }}
          commitish: ${{ github.event.pull_request.base.ref }}
          publish: true
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
